<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
          Title="Image Blur" Height="400" Width="600">
    <Grid>
       
        <Image x:Name="imageControl" Stretch="Uniform" Source="C:\Users\User\Documents\money.png" />

        
        <Slider x:Name="blurSlider" Margin="10,0,10,10" VerticalAlignment="Bottom" Maximum="10" TickFrequency="1" ValueChanged="BlurSlider_ValueChanged"/>
    </Grid>
</Window>
